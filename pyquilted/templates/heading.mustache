{{#heading}}
<div class="section heading">
{{#heading-simple}}
    <div>
        <div class="name">{{name}}</div>
        {{#adjacent}}
        <div class="adjacent">{{#title-detail}}{{title}}{{/title-detail}}{{#location-detail}}{{location}}&nbsp;&nbsp;<i class="fa {{via}}"></i>{{/location-detail}}{{#flair-detail}}<i class="fa {{icon}}"></i>&nbsp;&nbsp;{{flair}}{{/flair-detail}}</div>
        {{/adjacent}}
    </div>
    <div>
        {{#primary}}
        <div class="primary">{{#title-detail}}{{title}}{{/title-detail}}{{#location-detail}}{{location}}&nbsp;&nbsp;<i class="fa {{via}}"></i>{{/location-detail}}{{#flair-detail}}<i class="fa {{icon}}"></i>&nbsp;&nbsp;{{flair}}{{/flair-detail}}</div>
        {{/primary}}
    </div>
{{/heading-simple}}
{{#heading-complex}}
    <div>
        <div class="name">{{name}}</div>
        {{#adjacent}}
        <div class="adjacent">{{#title-detail}}{{title}}{{/title-detail}}{{#location-detail}}{{location}}&nbsp;&nbsp;<i class="fa {{via}}"></i>{{/location-detail}}{{#flair-detail}}<i class="fa {{icon}}"></i>&nbsp;&nbsp;{{flair}}{{/flair-detail}}</div>
        {{/adjacent}}
        {{#top_side}}
        <div class="top-side">{{#title-detail}}{{title}}{{/title-detail}}{{#location-detail}}{{location}}&nbsp;&nbsp;<i class="fa {{via}}"></i>{{/location-detail}}{{#flair-detail}}{{flair}}&nbsp;&nbsp;<i class="fa {{icon}}"></i>{{/flair-detail}}</div>
        {{/top_side}}
    </div>
    <div>
        {{#primary}}
        <div class="primary">{{#objective-detail}}{{objective}}{{/objective-detail}}{{#title-detail}}{{title}}{{/title-detail}}{{#location-detail}}{{location}}&nbsp;&nbsp;<i class="fa {{via}}"></i>{{/location-detail}}{{#flair-detail}}<i class="fa {{icon}}"></i>&nbsp;&nbsp;{{flair}}{{/flair-detail}}</div>
        {{/primary}}
        {{#bottom_side}}
        <div class="bottom-side">{{#title-detail}}{{title}}{{/title-detail}}{{#location-detail}}{{location}}&nbsp;&nbsp;<i class="fa {{via}}"></i>{{/location-detail}}{{#flair-detail}}{{flair}}&nbsp;&nbsp;<i class="fa {{icon}}"></i>{{/flair-detail}}</div>
        {{/bottom_side}}
    </div>
{{/heading-complex}}
</div>
{{/heading}}
